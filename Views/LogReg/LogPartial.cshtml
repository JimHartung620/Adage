@model LoginUser
<form asp-action="Login" asp-controller="LogReg" asp-method="post">
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="LogEmail"></span>
        <label asp-for="LogEmail" class="col-sm-4"></label>
        <input asp-for="LogEmail" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="LogPass"></span>
        <label asp-for="LogPass" class="col-sm-4"></label>
        <input asp-for="LogPass" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1 mb-3 justify-content-center">
        <input type="submit" value="Login" class="col btn btn-primary">
    </div>
</form>