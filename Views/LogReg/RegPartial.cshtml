@model User
<form asp-action="Register" asp-controller="LogReg" method="post">
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="col-sm-4"></label>
        <input asp-for="FirstName" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="col-sm-4"></label>
        <input asp-for="LastName" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="UserName"></span>
        <label asp-for="UserName" class="col-sm-4"></label>
        <input asp-for="UserName" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Email"></span>
        <label asp-for="Email" class="col-sm-4"></label>
        <input asp-for="Email" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Password"></span>
        <label asp-for="Password" class="col-sm-4"></label>
        <input asp-for="Password" class="col-sm-8 form-control">
    </div>
    <div class="form-group row mx-1">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="ConfirmPassword"></span>
        <label asp-for="ConfirmPassword" class="col-sm-4"></label>
        <input asp-for="ConfirmPassword" class="col-sm-8 form-control">
    </div>
    @* <div class="form-group row">
        <input type="submit" value="Register" class="col-sm-4 offset-sm-4 btn btn-primary">
    </div> *@
    <div class="form-group row mx-1 mb-3 justify-content-center">
        <input type="submit" value="Register" class="col btn btn-primary">
    </div>
</form>